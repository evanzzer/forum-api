{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "linebreak-style": ["error", "windows"],
        "object-curly-newline": ["error", {
            "consistent": true
        }],
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off"
    }
}
